{
  "name": "vue-server-template",
  "version": "0.1",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "nodemon -w src/server -w src/common -x npm run ts-node src/server/main.ts 3000",
    "build": "npm run type-check && npm run build:server && npm run build:client",
    "build:client": "vite build --outDir build/client",
    "build:server": "vite build --outDir build/server -c vite.server.config.ts",
    "preview": "vite preview",
    "test:unit": "vitest",
    "type-check": "npm run type-check:client && npm run type-check:server",
    "type-check:client": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "type-check:server": "tsc --noEmit -p tsconfig.node.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "clean": "rimraf dist build",
    "ts-node": "ts-node -r tsconfig-paths/register",
    "pack": "npm pack --pack-destination dist",
    "start": "node ./build/server/main.js 3000"
  },
  "dependencies": {
    "async-lock": "^1.4.0",
    "chart.js": "^4.3.0",
    "express": "^4.18.2",
    "font-awesome": "^4.7.0",
    "lodash": "^4.17.21",
    "luxon": "^3.3.0",
    "pinia": "^2.0.32",
    "sha1": "^1.1.1",
    "sharp": "^0.32.1",
    "tabulator-tables": "^5.4.4",
    "vue": "^3.3.2",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/async-lock": "^1.4.0",
    "@types/express": "^4.17.17",
    "@types/jsdom": "^21.1.1",
    "@types/lodash": "^4.14.195",
    "@types/luxon": "^3.3.0",
    "@types/node": "^18.16.8",
    "@types/sha1": "^1.1.3",
    "@types/tabulator-tables": "^5.4.7",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.3.2",
    "@vue/tsconfig": "^0.4.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.39.0",
    "eslint-plugin-vue": "^9.11.0",
    "jsdom": "^22.0.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.0.4",
    "vite": "^4.3.5",
    "vitest": "^0.31.0",
    "vue-tsc": "^1.6.4"
  }
}
